<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity"
    android:background="@color/colorPrimary">

    <include
        android:id="@+id/update_post_page_toolbar"
        layout="@layout/app_bar_layout" />

    <ImageButton
        android:id="@+id/select_post_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/select_image" />

    <EditText
        android:id="@+id/post_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/select_post_image"
        android:layout_marginTop="1dp"
        android:padding="15dp"
        android:inputType="textMultiLine"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorHint="@color/whiteTransparentHalf"
        android:hint="write something about here..."/>

    <Button
        android:id="@+id/update_post_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Update Post"
        android:layout_below="@+id/post_description"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_margin="8dp"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:background="@color/colorAccent"
        />
</RelativeLayout>